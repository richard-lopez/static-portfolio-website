---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Your Name - Portfolio" description="Project Manager & Creative Professional">
  <main class="homepage">
    <!-- Hero Section with Bold Color -->
    <section class="hero section-full">
      <div class="hero-content">
        <div class="hero-text">
          <h1>RICHARD LOPEZ</h1>
          <div class="hero-subtitle">
            <p>Project Manager &<br/>Creative Professional</p>
          </div>
        </div>
        
        <div class="hero-navigation">
          <div class="nav-item">
            <span class="project-number">01.</span>
            <a href="/projects">Projects</a>
          </div>
          <div class="nav-item">
            <span class="project-number">02.</span>
            <a href="/experience">Experience</a>
          </div>
          <div class="nav-item">
            <span class="project-number">03.</span>
            <a href="/contact">Contact</a>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="about">
      <div class="container-narrow">
        <div class="about-content">
          <div class="about-text">
            <h3>About</h3>
            <p>
              I build thoughtful solutions through strategic planning and execution, 
              bridging the gap between technical complexity and business objectives. 
              My work focuses on creating systems that scale, processes that endure, 
              and experiences that matter.
            </p>
            <p>
              Currently leading digital transformation initiatives at forward-thinking 
              organizations, with expertise in agile methodologies, stakeholder management, 
              and cross-functional team leadership.
            </p>
          </div>
          
          <div class="about-details">
            <div class="detail-item">
              <h4>Email</h4>
              <a href="mailto:your.email@example.com">your.email@example.com</a>
            </div>
            <div class="detail-item">
              <h4>Currently</h4>
              <p>Available for new opportunities</p>
            </div>
            <div class="detail-item">
              <h4>Location</h4>
              <p>Your City, Country</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .homepage {
    padding-top: 0rem; /* Account for fixed nav */
  }

  /* Hero Section - Bold color background */
  .hero {
    background: var(--orange-primary);
    color: var(--black);
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
  }

  .hero-content {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 4rem;
    align-items: center;
  }

  .hero-text h1 {
    font-size: clamp(4rem, 12vw, 12rem);
    line-height: 0.85;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .hero-subtitle p {
    font-size: 1.25rem;
    font-weight: 300;
    line-height: 1.3;
    margin: 0;
  }

  .hero-navigation {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .nav-item {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .nav-item a {
    font-size: 1.1rem;
    font-weight: 400;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* About Section */
  .about {
    padding: 6rem 0;
    background: var(--white);
  }

  .about-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .about-text h3 {
    margin-bottom: 2rem;
  }

  .about-details {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .detail-item h4 {
    margin-bottom: 0.5rem;
    color: var(--gray-medium);
  }

  .detail-item p,
  .detail-item a {
    margin: 0;
    font-weight: 400;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: left;
    }

    .hero-navigation {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .homepage {
      padding-top: 4rem;
    }
  }
</style>